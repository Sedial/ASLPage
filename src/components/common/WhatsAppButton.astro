---
interface Props {
  phoneNumber?: string;
  message?: string;
  position?: 'right' | 'left';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
}

const {
  phoneNumber = '+573112057108',
  message = 'Hola, soy un cliente  que visitó el sitio web de ASL - Logística 3PL Colombia. Me interesa conocer más sobre sus servicios logísticos especializados.',
  position = 'left',
  size = 'lg',
  class: className = '',
} = Astro.props;

const sizeClasses = {
  sm: 'w-12 h-12',
  md: 'w-14 h-14',
  lg: 'w-16 h-16'
};

const positionClasses = {
  right: 'right-4 sm:right-6',
  left: 'left-4 sm:left-6'
};

// Crear el enlace de WhatsApp
const whatsappUrl = `https://wa.me/${phoneNumber.replace(/[^0-9]/g, '')}?text=${encodeURIComponent(message)}`;
---

<button
  type="button"
  onclick="openWhatsAppModal()"
  aria-label="Contactar por WhatsApp"
  class={`fixed bottom-6 ${positionClasses[position]} ${sizeClasses[size]} rounded-full bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white shadow-2xl flex items-center justify-center transition-all duration-300 hover:scale-110 focus:outline-none focus:ring-4 focus:ring-green-300 z-50 group border-2 border-white ${className}`}
  id="whatsapp-button"
>
  <!-- Icono de WhatsApp -->
  <svg 
    class="w-8 h-8" 
    fill="currentColor" 
    viewBox="0 0 24 24" 
    xmlns="http://www.w3.org/2000/svg"
  >
    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.893 3.386"/>
  </svg>
  
  <!-- Tooltip -->
  <div class="absolute left-full ml-3 px-4 py-3 bg-gradient-to-r from-gray-800 to-gray-900 text-white text-sm rounded-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 whitespace-nowrap shadow-xl">
    <div class="font-semibold text-green-400">ASL - Logística 3PL</div>
    <div class="text-xs text-gray-300">¡Contáctanos por WhatsApp!</div>
    <div class="absolute top-1/2 -left-1 transform -translate-y-1/2 w-2 h-2 bg-gray-800 rotate-45"></div>
  </div>
  
  <!-- Efecto de pulso profesional -->
  <div class="absolute inset-0 rounded-full bg-green-400 animate-ping opacity-30"></div>
  <div class="absolute inset-0 rounded-full bg-white opacity-10"></div>
</button>

<style>
  @keyframes pulse-whatsapp {
    0% {
      transform: scale(1);
      box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.7);
    }
    70% {
      transform: scale(1.05);
      box-shadow: 0 0 0 10px rgba(34, 197, 94, 0);
    }
    100% {
      transform: scale(1);
      box-shadow: 0 0 0 0 rgba(34, 197, 94, 0);
    }
  }
  
  #whatsapp-button {
    animation: pulse-whatsapp 2s infinite;
  }
  
  #whatsapp-button:hover {
    animation: none;
  }
  
  /* Responsive adjustments */
  @media (max-width: 640px) {
    #whatsapp-button {
      bottom: 1.5rem;
    }
  }
</style>

<script>
  function openWhatsAppModal() {
    const modal = document.getElementById('whatsapp-modal');
    if (modal) {
      modal.classList.remove('hidden');
      modal.classList.add('flex');
    }
  }
  
  // Hacer la función global
  window.openWhatsAppModal = openWhatsAppModal;
  
  // Agregar funcionalidad adicional si es necesaria
  document.addEventListener('DOMContentLoaded', () => {
    const whatsappButton = document.getElementById('whatsapp-button');
    
    if (whatsappButton) {
      // Tracking de clics (opcional)
      whatsappButton.addEventListener('click', () => {
        // Aquí se puede agregar tracking analytics si es necesario
        console.log('WhatsApp button clicked');
      });
    }
  });
</script>