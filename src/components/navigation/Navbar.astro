---
import Button from '../ui/Button.astro';
import SpaceButton from '../ui/SpaceButton.astro';

// Load navigation from the JSON data
const navigationData = await import('../../data/navigation.json');
const mainNav = navigationData.mainNav || [];

interface Props {
  transparent?: boolean;
}

const { transparent = false } = Astro.props;

// Helper function to determine active link
const isActive = (href: string) => {
  if (typeof window === 'undefined') return false;
  return window.location.pathname === href;
};
---

<nav class={`fixed top-0 left-0 right-0 z-50 flex items-center justify-between px-4 sm:px-6 py-3 sm:py-4 backdrop-blur-xl transition-all duration-500 ${
  transparent 
    ? 'bg-white/5 border-white/10' 
    : 'bg-white/90 border-gray-200/20'
} border-b shadow-lg hover:shadow-2xl mx-2 sm:mx-4 my-2 rounded-full`}>
  
  <!-- Logo con animación mejorada -->
  <div class="flex items-center">
    <a href="/" class="flex items-center space-x-2 sm:space-x-3 group relative">
      <!-- Efecto de resplandor -->
      <div class="absolute -inset-2 bg-gradient-to-r from-primary-500/20 to-primary-600/20 rounded-full blur-xl opacity-0 group-hover:opacity-100 transition-all duration-700"></div>
      
      <!-- Logo responsivo -->
      <img src="/images/logo.webp" alt="ASL Logo" class="w-10 h-10 sm:w-12 sm:h-12 object-contain transition-all duration-500 group-hover:scale-110" />
      
      <div class="flex flex-col">
        <span class={`text-xl sm:text-2xl font-black tracking-tight transition-all duration-500 ${
          transparent ? 'text-white' : 'text-gray-900'
        } group-hover:text-primary-500`}>
          ASL
        </span>
        <span class={`text-xs font-medium opacity-60 transition-all duration-500 ${
          transparent ? 'text-white/80' : 'text-gray-500'
        } group-hover:opacity-100`}>
          Innovation
        </span>
      </div>
    </a>
  </div>

  <!-- Desktop Navigation con efectos mejorados -->
  <div class="hidden lg:flex items-center space-x-2">
    <ul class="flex space-x-1">
      {mainNav.map((item) => (
        <li class="relative group">
          <a 
            href={item.href}
            class={`relative px-4 xl:px-5 py-2.5 xl:py-3 rounded-full text-sm font-semibold transition-all duration-400 overflow-hidden ${
              transparent 
                ? 'text-white/90 hover:text-white hover:bg-white/15' 
                : 'text-gray-500 hover:text-primary-500 hover:bg-gradient-to-r hover:from-primary-50 hover:to-primary-100'
            } ${
              isActive(item.href) 
                ? transparent 
                  ? 'text-white bg-white/20 shadow-lg' 
                  : 'text-primary-500 bg-gradient-to-r from-primary-50 to-primary-100 shadow-lg font-bold'
                : ''
            }`}
          >
            <span class="relative z-10 tracking-wide">{item.title}</span>
            
            <!-- Efecto de hover con gradiente animado -->
            <div class="absolute inset-0 bg-gradient-to-r from-primary-500/0 via-primary-600/10 to-primary-500/0 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-center"></div>
            
            <!-- Indicador activo animado -->
            {isActive(item.href) && (
              <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-1 h-1 bg-primary-500 rounded-full animate-pulse"></div>
            )}
          </a>
        </li>
      ))}
    </ul>

    <!-- Botón CTA mejorado -->
    <div class="ml-6 xl:ml-8 flex items-center space-x-4">
      <SpaceButton href="/#contacto" text="Solicitar Ahora" />
    </div>
  </div>

  <!-- Mobile menu button mejorado -->
  <div class="lg:hidden">
    <button 
      id="mobile-menu-button" 
      class={`relative p-3 rounded-xl transition-all duration-300 hover:scale-105 active:scale-95 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 shadow-lg ${
        transparent 
          ? 'text-white bg-white/10 hover:bg-white/20 border border-white/20' 
          : 'text-gray-700 bg-white hover:bg-primary-50 hover:text-primary-600 border border-gray-200/50 hover:border-primary-200'
      }`}
      aria-label="Abrir menú de navegación"
      aria-expanded="false"
    >
      <!-- Hamburger animado mejorado -->
      <div class="w-6 h-6 relative">
        <span class="hamburger-line absolute left-0 top-1 w-6 h-0.5 bg-current rounded-full transition-all duration-300 shadow-sm"></span>
        <span class="hamburger-line absolute left-0 top-2.5 w-6 h-0.5 bg-current rounded-full transition-all duration-300 shadow-sm"></span>
        <span class="hamburger-line absolute left-0 top-4 w-6 h-0.5 bg-current rounded-full transition-all duration-300 shadow-sm"></span>
      </div>
    </button>
  </div>

  <!-- Mobile menu premium redesigned with enhanced accessibility -->
  <div 
    id="mobile-menu" 
    class="fixed inset-0 z-[999999999] lg:hidden transition-all duration-300 opacity-0 invisible pointer-events-none"
    role="dialog"
    aria-modal="true"
    aria-labelledby="mobile-menu-title"
    aria-hidden="true"
  >
    <!-- Enhanced Backdrop -->
    <div 
      class="absolute inset-0 bg-black/70 backdrop-blur-md" 
      id="mobile-menu-backdrop"
      aria-hidden="true"
    ></div>
    
    <!-- Menu Container with improved positioning -->
    <div
        class="absolute top-0 right-0 bottom-0 w-80 bg-white backdrop-blur-xl shadow-2xl transform transition-all duration-400 translate-x-full z-[1000000000]"
        id="mobile-menu-container"
      role="document"
    >
      
      <!-- Enhanced Header with close button -->
      <div class="bg-gradient-to-r from-primary-500/8 via-primary-400/6 to-primary-600/8 px-6 py-6 border-b border-gray-200/40 backdrop-blur-sm">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-3">
            <div class="w-3 h-3 bg-gradient-to-r from-primary-500 to-primary-600 rounded-full animate-pulse shadow-lg" aria-hidden="true"></div>
            <h2 id="mobile-menu-title" class="text-xl font-black text-gray-900 tracking-tight">Menú de Navegación</h2>
          </div>
          <button 
            id="mobile-menu-close" 
            class="p-2 rounded-full bg-gray-100/80 hover:bg-gray-200/80 transition-all duration-200 hover:scale-110 active:scale-95 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2"
            aria-label="Cerrar menú de navegación"
            type="button"
          >
            <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
      </div>

      <!-- Navigation Links with enhanced design and accessibility -->
      <div class="flex-1 overflow-y-auto px-6 py-8">
        <nav class="space-y-3" role="navigation" aria-label="Menú principal">
          {mainNav.map((item, index) => (
            <div style={`animation-delay: ${index * 100}ms`} class="mobile-menu-item">
              <a
                href={item.href}
                class={`group flex items-center justify-between px-5 py-4 rounded-2xl transition-all duration-300 relative overflow-hidden border focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 ${
                  isActive(item.href) 
                    ? 'bg-gradient-to-r from-primary-50 via-primary-25 to-primary-50 text-primary-700 font-bold shadow-lg border-primary-200/60 ring-2 ring-primary-100' 
                    : 'text-gray-700 hover:bg-gradient-to-r hover:from-gray-50 hover:via-primary-25 hover:to-gray-50 hover:text-primary-600 border-gray-200/40 hover:border-primary-200/60 hover:shadow-md'
                }`}
                aria-current={isActive(item.href) ? 'page' : undefined}
                tabindex="0"
              >
                <!-- Enhanced background effect -->
                <div class="absolute inset-0 bg-gradient-to-r from-primary-500/0 via-primary-500/8 to-primary-500/0 transform scale-x-0 group-hover:scale-x-100 group-focus:scale-x-100 transition-transform duration-500 origin-center" aria-hidden="true"></div>
                
                <div class="flex items-center space-x-4 relative z-10">
                  <!-- Enhanced indicator -->
                  <div 
                    class={`w-3 h-3 rounded-full transition-all duration-300 ${
                      isActive(item.href) 
                        ? 'bg-gradient-to-r from-primary-500 to-primary-600 shadow-lg' 
                        : 'bg-gray-300 group-hover:bg-gradient-to-r group-hover:from-primary-400 group-hover:to-primary-500 group-focus:bg-gradient-to-r group-focus:from-primary-400 group-focus:to-primary-500'
                    }`}
                    aria-hidden="true"
                  ></div>
                  <span class="text-lg font-semibold tracking-wide">{item.title}</span>
                </div>
                
                <!-- Enhanced arrow -->
                <div class="relative z-10" aria-hidden="true">
                  <svg class="w-6 h-6 transform group-hover:translate-x-1 group-hover:scale-110 group-focus:translate-x-1 group-focus:scale-110 transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </a>
            </div>
          ))}
        </nav>

        <!-- Enhanced CTA Section -->
        <div class="mt-12 pt-8 border-t border-gray-200/50">
          <div class="text-center mb-6">
            <h3 class="text-lg font-bold text-gray-900 mb-2">¿Listo para comenzar?</h3>
            <p class="text-sm text-gray-600">Solicita una cotización personalizada</p>
          </div>
          <div class="flex justify-center">
            <SpaceButton href="/#contacto" text="Solicitar Cotización" />
          </div>
        </div>
      </div>
    </div>
  </div>
</nav>

<style>
  nav {
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
  }
  
  /* Enhanced Mobile menu animations */
  #mobile-menu {
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }
  
  #mobile-menu.show {
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
  }
  
  #mobile-menu-container {
    transition: transform 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    will-change: transform;
  }
  
  #mobile-menu.show #mobile-menu-container {
    transform: translateX(0);
  }
  
  /* Ensure proper stacking context */
  #mobile-menu.show {
    z-index: 999999999 !important;
  }
  
  #mobile-menu.show #mobile-menu-container {
    z-index: 1000000000 !important;
  }

  /* Evitar stacking context del nav cuando el menú está abierto */
  body:has(#mobile-menu.show) nav {
    transform: none !important;
  }
  body.mobile-menu-open nav {
    transform: none !important;
  }

  /* El backdrop debe capturar clics cuando está visible */
  #mobile-menu.show #mobile-menu-backdrop {
    pointer-events: auto;
  }
  
  .mobile-menu-item {
    opacity: 0;
    transform: translateX(30px) scale(0.95);
    animation: slideInFromRight 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
  }
  
  @keyframes slideInFromRight {
    0% {
      opacity: 0;
      transform: translateX(30px) scale(0.95);
    }
    100% {
      opacity: 1;
      transform: translateX(0) scale(1);
    }
  }
  
  /* Smooth backdrop animation */
  #mobile-menu-backdrop {
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }
  
  /* Enhanced hover effects */
  .mobile-menu-item a:hover {
    transform: translateX(4px);
  }
  
  .mobile-menu-item a:active {
    transform: translateX(2px) scale(0.98);
  }
  
  /* Hamburger animation mejorada */
  .hamburger-line {
    transform-origin: center;
  }
  
  #mobile-menu-button.active .hamburger-line:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }
  
  #mobile-menu-button.active .hamburger-line:nth-child(2) {
    opacity: 0;
    transform: scale(0) rotate(180deg);
  }
  
  #mobile-menu-button.active .hamburger-line:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
  }
  
  /* Enhanced button states */
  #mobile-menu-button.active {
    transform: scale(1.05);
  }
  
  /* Scroll effects - TUS ANIMACIONES ORIGINALES */
  .navbar-scrolled {
    background: rgba(255, 255, 255, 0.95) !important;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.1) !important;
    border-color: rgba(229, 231, 235, 0.3) !important;
  }
  
  .navbar-scrolled.transparent {
    background: rgba(255, 255, 255, 0.1) !important;
    border-color: rgba(255, 255, 255, 0.2) !important;
  }

  /* Enhanced responsive improvements */
  @media (max-width: 640px) {
    nav {
      margin: 0.25rem;
      padding: 0.75rem 1rem;
    }
    
    #mobile-menu-container {
      padding-top: env(safe-area-inset-top, 0);
      width: 85vw;
      max-width: 320px;
    }
    
    .mobile-menu-item a {
      padding: 1rem 1.25rem;
      font-size: 1rem;
      min-height: 60px;
      display: flex;
      align-items: center;
    }
  }
  
  @media (max-width: 480px) {
    #mobile-menu-container {
      padding-top: calc(env(safe-area-inset-top, 0) + 0.5rem);
      width: 90vw;
      max-width: 280px;
    }
    
    .mobile-menu-item a {
      padding: 0.875rem 1rem;
      font-size: 0.95rem;
      min-height: 56px;
    }
    
    #mobile-menu-container .px-6 {
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }
  
  @media (max-width: 360px) {
    #mobile-menu-container {
      width: 95vw;
      max-width: 260px;
    }
    
    .mobile-menu-item a {
      padding: 0.75rem 0.875rem;
      font-size: 0.9rem;
    }
  }
  
  @media (max-height: 600px) {
    #mobile-menu-container .py-8 {
      padding-top: 1.5rem;
      padding-bottom: 1.5rem;
    }
    
    .mobile-menu-item a {
      padding: 0.75rem 1.25rem;
    }
    
    #mobile-menu-container .mt-12 {
      margin-top: 2rem;
    }
  }

  /* Touch improvements for mobile devices */
  @media (hover: none) and (pointer: coarse) {
    .group:hover .group-hover\:scale-110 {
      transform: scale(1);
    }
    
    .group:active .group-hover\:scale-110 {
      transform: scale(1.05);
    }
    
    .mobile-menu-item a:hover {
      transform: none;
    }
    
    .mobile-menu-item a:active {
      transform: scale(0.98);
      background-color: rgba(var(--color-primary-500), 0.1);
    }
  }
  
  /* Safe area support for devices with notches */
  @supports (padding: max(0px)) {
    #mobile-menu-container {
      padding-left: max(1.5rem, env(safe-area-inset-left));
      padding-right: max(1.5rem, env(safe-area-inset-right));
    }
  }
  
  /* Production environment fixes */
  #mobile-menu {
    position: fixed !important;
    top: 0 !important;
    left: 0 !important;
    right: 0 !important;
    bottom: 0 !important;
    overflow: hidden;
    z-index: 99999 !important;
  }
  
  #mobile-menu-container {
    position: absolute !important;
    top: 0 !important;
    right: 0 !important;
    bottom: 0 !important;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
    transform: translateX(100%) !important;
  }
  
  #mobile-menu.show #mobile-menu-container {
    transform: translateX(0) !important;
  }
  
  /* Webkit specific fixes */
  @supports (-webkit-appearance: none) {
    #mobile-menu-container {
      -webkit-transform: translateX(100%);
    }
    
    #mobile-menu.show #mobile-menu-container {
      -webkit-transform: translateX(0);
    }
  }
  
  /* Screen reader only content */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
  
  /* Focus visible improvements */
  .focus\:ring-2:focus {
    box-shadow: 0 0 0 2px rgba(var(--color-primary-500), 0.5);
  }
  
  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .mobile-menu-item,
    #mobile-menu-container,
    .hamburger-line {
      animation: none;
      transition: none;
    }
    
    .mobile-menu-item a:hover,
    .mobile-menu-item a:active {
      transform: none;
    }
  }
</style>

<script>
  // Enhanced mobile menu functionality with improved UX
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const mobileMenuBackdrop = document.getElementById('mobile-menu-backdrop');
  const mobileMenuClose = document.getElementById('mobile-menu-close');
  let isMenuOpen = false;
  let scrollPosition = 0;

  // IMPORTANT: Ensure the mobile menu is outside any transformed ancestor (like <nav>)
  // to avoid creating a new containing block for position: fixed elements.
  // This prevents the overlay from appearing clipped or behind other sections.
  if (mobileMenu && mobileMenu.parentElement !== document.body) {
    document.body.appendChild(mobileMenu);
  }

  function openMobileMenu() {
    if (isMenuOpen) return;
    
    isMenuOpen = true;
    scrollPosition = window.scrollY;
    
    // Prevent body scroll
    document.body.style.position = 'fixed';
    document.body.style.top = `-${scrollPosition}px`;
    document.body.style.width = '100%';
    document.body.classList.add('mobile-menu-open');
    
    // Show menu with animation and update ARIA attributes
    mobileMenu?.classList.add('show');
    mobileMenu?.setAttribute('aria-hidden', 'false');
    menuButton?.classList.add('active');
    menuButton?.setAttribute('aria-expanded', 'true');
    
    // Focus management for accessibility
    setTimeout(() => {
      mobileMenuClose?.focus();
    }, 300);
    
    // Announce to screen readers
    const announcement = document.createElement('div');
    announcement.setAttribute('aria-live', 'polite');
    announcement.setAttribute('aria-atomic', 'true');
    announcement.className = 'sr-only';
    announcement.textContent = 'Menú de navegación abierto';
    document.body.appendChild(announcement);
    setTimeout(() => document.body.removeChild(announcement), 1000);
  }

  function closeMobileMenu() {
    if (!isMenuOpen) return;
    
    isMenuOpen = false;
    
    // Hide menu and update ARIA attributes
    mobileMenu?.classList.remove('show');
    mobileMenu?.setAttribute('aria-hidden', 'true');
    menuButton?.classList.remove('active');
    menuButton?.setAttribute('aria-expanded', 'false');
    
    // Restore body scroll
    document.body.style.position = '';
    document.body.style.top = '';
    document.body.style.width = '';
    document.body.classList.remove('mobile-menu-open');
    window.scrollTo(0, scrollPosition);
    
    // Announce to screen readers
    const announcement = document.createElement('div');
    announcement.setAttribute('aria-live', 'polite');
    announcement.setAttribute('aria-atomic', 'true');
    announcement.className = 'sr-only';
    announcement.textContent = 'Menú de navegación cerrado';
    document.body.appendChild(announcement);
    setTimeout(() => document.body.removeChild(announcement), 1000);
  }

  function toggleMobileMenu() {
    if (isMenuOpen) {
      closeMobileMenu();
    } else {
      openMobileMenu();
    }
  }

  // Event listeners with improved handling
  if (menuButton && mobileMenu) {
    menuButton.addEventListener('click', (e) => {
      e.preventDefault();
      e.stopPropagation();
      toggleMobileMenu();
    });
  }

  // Close button functionality
  mobileMenuClose?.addEventListener('click', (e) => {
    e.preventDefault();
    e.stopPropagation();
    closeMobileMenu();
  });

  // Close menu when clicking on backdrop
  mobileMenuBackdrop?.addEventListener('click', closeMobileMenu);

  // Close when clicking on navigation links with smooth transition
  const mobileMenuLinks = document.querySelectorAll('#mobile-menu nav a');
  mobileMenuLinks.forEach(link => {
    link.addEventListener('click', (e) => {
      if (isMenuOpen) {
        // Add a subtle delay for better visual feedback
        setTimeout(closeMobileMenu, 200);
      }
    });
  });

  // TUS ANIMACIONES DE SCROLL ORIGINALES MANTENIDAS
  let lastScrollY = window.scrollY;
  let isScrollingUp = false;

  window.addEventListener('scroll', () => {
    const nav = document.querySelector('nav');
    const currentScrollY = window.scrollY;
    
    // Determine scroll direction
    isScrollingUp = currentScrollY < lastScrollY;
    lastScrollY = currentScrollY;

    if (nav) {
      if (currentScrollY > 50) {
        nav.classList.add('navbar-scrolled');
        
        // Hide navbar when scrolling down, show when scrolling up
        if (isScrollingUp || currentScrollY < 100) {
          nav.style.transform = 'translateY(0)';
        } else {
          nav.style.transform = 'translateY(-100%)';
        }
      } else {
        nav.classList.remove('navbar-scrolled');
        nav.style.transform = 'translateY(0)';
      }
    }
  });

  // Enhanced keyboard navigation and accessibility
  document.addEventListener('keydown', (e) => {
    if (!isMenuOpen) return;
    
    const focusableElements = mobileMenu?.querySelectorAll(
      'button, [href], input, select, textarea, [tabindex]:not([tabindex="-1"])'
    );
    const firstElement = focusableElements?.[0];
    const lastElement = focusableElements?.[focusableElements.length - 1];
    
    switch (e.key) {
      case 'Escape':
        e.preventDefault();
        closeMobileMenu();
        menuButton?.focus();
        break;
        
      case 'Tab':
        // Trap focus within the menu
        if (e.shiftKey) {
          if (document.activeElement === firstElement) {
            e.preventDefault();
            lastElement?.focus();
          }
        } else {
          if (document.activeElement === lastElement) {
            e.preventDefault();
            firstElement?.focus();
          }
        }
        break;
        
      case 'ArrowDown':
      case 'ArrowUp':
        e.preventDefault();
        const menuLinks = Array.from(mobileMenu?.querySelectorAll('nav a') || []);
        const currentIndex = menuLinks.indexOf(document.activeElement);
        
        if (e.key === 'ArrowDown') {
          const nextIndex = currentIndex < menuLinks.length - 1 ? currentIndex + 1 : 0;
          menuLinks[nextIndex]?.focus();
        } else {
          const prevIndex = currentIndex > 0 ? currentIndex - 1 : menuLinks.length - 1;
          menuLinks[prevIndex]?.focus();
        }
        break;
    }
  });

  // Handle resize
  let resizeTimeout;
  window.addEventListener('resize', () => {
    clearTimeout(resizeTimeout);
    resizeTimeout = setTimeout(() => {
      if (window.innerWidth >= 1024 && isMenuOpen) {
        toggleMobileMenu();
      }
    }, 250);
  });

  // TU INTERSECTION OBSERVER ORIGINAL MANTENIDO
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.animationPlayState = 'running';
      }
    });
  }, observerOptions);

  // Observe mobile menu items for staggered animation
  document.querySelectorAll('.mobile-menu-item').forEach(item => {
    observer.observe(item);
  });
</script>