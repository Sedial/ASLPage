---
import Button from '../ui/Button.astro';

interface Post {
  title: string;
  slug: string;
  excerpt: string;
  date: string;
  author: string;
  category: string;
  coverImage: string;
}

interface Props {
  title?: string;
  subtitle?: string;
  viewAllLink?: string;
  viewAllText?: string;
  posts: Post[];
  limit?: number;
}

const {
  title = 'Novedades y artículos',
  subtitle = 'Actualízate con noticias, consejos e insights de logística 3PL',
  viewAllLink = '/blog',
  viewAllText = 'Ver todos los artículos',
  posts = [],
  limit = 3,
} = Astro.props;

// Format the date to a more readable format
function formatDate(dateString: string): string {
  const options: Intl.DateTimeFormatOptions = { year: 'numeric', month: 'long', day: 'numeric' };
  return new Date(dateString).toLocaleDateString('es-CO', options);
}

// Limit the number of posts shown
const displayedPosts = posts.slice(0, limit);
---

<section class="section bg-gradient-to-b from-white to-gray-50/50 relative overflow-hidden">
  <!-- Elementos decorativos de fondo -->
  <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iNDAiIGhlaWdodD0iNDAiIHZpZXdCb3g9IjAgMCA0MCA0MCIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KPGNpcmNsZSBjeD0iMiIgY3k9IjIiIHI9IjEiIGZpbGw9IiNDQTI0MUMiIGZpbGwtb3BhY2l0eT0iMC4wNSIvPgo8L3N2Zz4=')] opacity-30"></div>
  
  <div class="container relative z-10">
    <div class="section-heading">
      <div class="inline-flex items-center px-4 py-2 bg-primary-50 text-primary-600 rounded-full text-sm font-semibold mb-4">
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path d="M2 6a2 2 0 012-2h5l2 2h5a2 2 0 012 2v6a2 2 0 01-2 2H4a2 2 0 01-2-2V6z"></path>
        </svg>
        Blog & Noticias
      </div>
      <h2 class="section-title text-primary-600 mb-4">{title}</h2>
      <p class="section-subtitle text-gray-700 max-w-2xl mx-auto">{subtitle}</p>
    </div>
    
    {displayedPosts.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mt-16">
        {displayedPosts.map((post) => (
          <article class="bg-white rounded-2xl overflow-hidden shadow-lg border border-gray-100 transition-all duration-500 hover:shadow-2xl hover:border-primary-200 hover:-translate-y-2 group">
            <a href={`/blog/${post.slug}`} class="block overflow-hidden">
              <div class="relative overflow-hidden aspect-video">
                <img 
                  src={post.coverImage} 
                  alt={post.title}
                  class="w-full h-full object-cover transition duration-700 group-hover:scale-110"
                />
                <!-- Overlay gradiente -->
                <div class="absolute inset-0 bg-gradient-to-t from-black/30 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                
                <!-- Badge de categoría mejorado -->
                <div class="absolute top-4 right-4 bg-primary-600 text-white text-xs font-bold px-3 py-1.5 rounded-full shadow-lg backdrop-blur-sm border border-white/20">
                  {post.category}
                </div>
                
                <!-- Indicador de lectura -->
                <div class="absolute bottom-4 left-4 bg-white/90 backdrop-blur-sm text-gray-700 text-xs font-medium px-3 py-1 rounded-full opacity-0 group-hover:opacity-100 transition-all duration-300 transform translate-y-2 group-hover:translate-y-0">
                  <svg class="w-3 h-3 inline mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"></path>
                    <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"></path>
                  </svg>
                  Leer más
                </div>
              </div>
              
              <div class="p-6">
                <!-- Metadatos del post -->
                <div class="flex items-center justify-between text-gray-600 text-sm mb-3">
                  <div class="flex items-center space-x-3">
                    <span class="flex items-center">
                      <svg class="w-4 h-4 mr-1.5 text-primary-500" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                      </svg>
                      {formatDate(post.date)}
                    </span>
                    <span class="text-gray-300">•</span>
                    <span class="flex items-center">
                      <svg class="w-4 h-4 mr-1.5 text-primary-500" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                      </svg>
                      {post.author}
                    </span>
                  </div>
                </div>
                
                <!-- Título del post -->
                <h3 class="text-xl font-bold mb-3 text-primary-600 group-hover:text-primary-700 transition-colors duration-300 line-clamp-2">
                  {post.title}
                </h3>
                
                <!-- Excerpt -->
                <p class="text-gray-700 mb-4 line-clamp-3 leading-relaxed">
                  {post.excerpt}
                </p>
                
                <!-- CTA de lectura -->
                <div class="flex items-center justify-between">
                  <span class="text-primary-600 font-semibold inline-flex items-center group-hover:text-primary-700 transition-colors duration-300">
                    Leer artículo
                    <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                    </svg>
                  </span>
                  
                  <!-- Tiempo de lectura estimado -->
                  <span class="text-xs text-gray-400 bg-gray-50 px-2 py-1 rounded-full">
                    5 min lectura
                  </span>
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>
    ) : (
      <div class="py-12 text-center">
        <p class="text-gray-700">No hay artículos de blog disponibles en este momento.</p>
      </div>
    )}
    
    {posts.length > limit && (
      <div class="mt-12 text-center">
        <Button href={viewAllLink} variant="primary" class="rounded-full px-6">{viewAllText}</Button>
      </div>
    )}
  </div>
</section>
