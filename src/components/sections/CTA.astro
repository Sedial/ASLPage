---
import Button from '../ui/Button.astro';

interface Props {
  title?: string;
  description?: string;
  primaryCTA?: {
    text: string;
    href: string;
  };
  secondaryCTA?: {
    text: string;
    href: string;
  };
  background?: 'light' | 'dark' | 'primary' | 'secondary';
  // Nueva prop para activar la variante de tooltips sociales en lugar de las estadísticas
  showSocialIcons?: boolean;
  // Permite sobreescribir los enlaces sociales por props si se desea reutilizar el patrón (buenas prácticas)
  socialLinks?: Array<{
    name: 'LinkedIn' | 'WhatsApp' | 'Instagram';
    href: string;
  }>;
}

const siteData = await import('../../data/site.json');

const {
  title = '¿Listo para comenzar?',
  description = 'Únete a cientos de clientes satisfechos que ya confían en nosotros para mejorar su operación logística.',
  primaryCTA = {
    text: 'Contáctanos',
    href: '/contact',
  },
  secondaryCTA = {
    text: 'Ver Servicios',
    href: '/services',
  },
  background = 'primary',
  showSocialIcons = false,
  socialLinks
} = Astro.props;

const backgroundClasses = {
  light: 'bg-gray-50',
  dark: 'bg-gray-900 text-white',
  primary: 'bg-primary-600 text-white',
  secondary: 'bg-secondary-600 text-white',
};

// Helpers para WhatsApp
const rawWhatsApp = (siteData as any)?.links?.whatsapp as string | undefined;
function buildWhatsAppHref(value?: string): string {
  if (!value) return '#';
  const trimmed = value.trim();
  // Si ya es un enlace completo, usarlo tal cual
  if (/^https?:\/\//i.test(trimmed)) return trimmed;
  // Normalizar a solo dígitos (ej: "+57 311 2057108" -> "573112057108")
  const digits = trimmed.replace(/[^\d]/g, '');
  if (!digits) return '#';
  return `https://wa.me/${digits}`;
}

// Fuente única de verdad para los enlaces sociales con fallback a siteData.links
// Dejar comentarios para fácil duplicación/extensión
const defaultSocials = [
  {
    name: 'LinkedIn' as const,
    // Buenas prácticas: tomar del site config si existe
    href: siteData.links?.linkedin || '#',
    color: '#0A66C2',
    brand: 'linkedin'
  },
  {
    name: 'WhatsApp' as const,
    // Permite número o URL en site.json > links.whatsapp
    href: buildWhatsAppHref(rawWhatsApp),
    color: '#25D366',
    brand: 'whatsapp'
  },
  {
    name: 'Instagram' as const,
    // Si en el futuro agrega "instagram" en site.json => se tomará automáticamente
    href: siteData.links?.instagram || '#',
    color: '#E1306C',
    brand: 'instagram'
  }
];

const socials = (socialLinks && socialLinks.length)
  ? defaultSocials.map(def => {
      const override = socialLinks.find(s => s.name === def.name);
      return override ? { ...def, href: override.href } : def;
    })
  : defaultSocials;
---

<section class={`py-20 md:py-28 ${backgroundClasses[background]} relative overflow-hidden`}>
  <!-- Elementos decorativos sutiles -->
  <div class="absolute inset-0 overflow-hidden">
    <!-- Formas geométricas de fondo -->
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-white/5 rounded-full blur-3xl"></div>
    <div class="absolute -bottom-40 -left-40 w-96 h-96 bg-white/3 rounded-full blur-3xl"></div>
    
    <!-- Elementos geométricos pequeños -->
    <div class="absolute top-20 right-20 w-4 h-4 bg-white/10 rounded-full"></div>
    <div class="absolute bottom-32 left-16 w-3 h-3 bg-white/10 rounded-lg transform rotate-45"></div>
    <div class="absolute top-1/3 right-1/4 w-2 h-2 bg-white/15 rounded-full"></div>
    
    <!-- Líneas decorativas sutiles -->
    <div class="absolute top-1/4 left-0 w-full h-px bg-white/10"></div>
    <div class="absolute bottom-1/4 left-0 w-full h-px bg-white/5"></div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
    <!-- Badge superior -->
    <div class="inline-flex items-center px-4 py-2 rounded-full bg-white/10 backdrop-blur-sm border border-white/20 text-white text-sm font-semibold mb-8">
      <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
        <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      Contáctanos Hoy
    </div>
    
    <!-- Título principal -->
    <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 text-white leading-tight">
      {title}
    </h2>
    
    <!-- Descripción -->
    <p class="text-xl md:text-2xl max-w-3xl mx-auto mb-12 text-white/90 leading-relaxed font-light">
      {description}
    </p>
    
    <!-- Botones CTA -->
    <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
      <Button 
        href={primaryCTA.href} 
        variant="ghost"
        size="lg"
        class="bg-white text-primary-600 hover:bg-gray-50 font-semibold px-8 py-4 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 border-0"
      >
        {primaryCTA.text}
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </Button>
      
      <Button 
        href={secondaryCTA.href} 
        variant="outline"
        size="lg"
        class="border-2 border-white/30 text-white hover:bg-white/10 backdrop-blur-sm font-semibold px-8 py-4 rounded-xl transition-all duration-300 transform hover:-translate-y-1"
      >
        {secondaryCTA.text}
      </Button>
    </div>
    
    {showSocialIcons ? (
      // Variante: Tooltips sociales (LinkedIn, WhatsApp, Instagram)
      <div class="mt-16 pt-12 border-t border-white/20">
        <div class="flex items-center justify-center gap-10 sm:gap-16 flex-wrap">
          {socials.map((s) => (
            <a
              href={s.href}
              target="_blank"
              rel="noopener noreferrer"
              aria-label={`Visitar ${s.name}`}
              class={`social-icon group focus:outline-none focus:ring-4 focus:ring-white/30 rounded-xl ${background !== 'light' ? 'text-white' : 'text-gray-800'}`}
              style={`--brand-color: ${s.color}`}
            >
              <div class="layer">
                <span></span>
                <span></span>
                <span></span>
                <span></span>
                <span class="fab">
                  {s.brand === 'linkedin' && (
                    <svg viewBox="0 0 448 512" class="h-6 w-6" aria-hidden="true">
                      <path fill="currentColor" d="M100.28 448H7.4V148.9h92.88zM53.79 108.1C24.09 108.1 0 83.5 0 53.8A53.79 53.79 0 0 1 107.58 53.8c0 29.7-24.1 54.3-53.79 54.3zM447.9 448h-92.68V302.4c0-34.7-.7-79.2-48.29-79.2-48.29 0-55.69 37.7-55.69 76.7V448h-92.78V148.9h89.08v40.8h1.3c12.4-23.5 42.69-48.3 87.88-48.3 94 0 111.28 61.9 111.28 142.3V448z"/>
                    </svg>
                  )}
                  {s.brand === 'whatsapp' && (
                    <svg viewBox="0 0 24 24" class="h-6 w-6" aria-hidden="true" fill="currentColor">
                      <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.893 3.386"/>
                    </svg>
                  )}
                  {s.brand === 'instagram' && (
                    <svg viewBox="0 0 24 24" class="h-6 w-6" aria-hidden="true" fill="currentColor">
                      <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                    </svg>
                  )}
                </span>
              </div>
              <div class="tooltip-text">{s.name}</div>
            </a>
          ))}
        </div>
        <p class="mt-6 text-sm text-white/70">Síguenos en nuestras redes para más novedades y contenido.</p>
      </div>
    ) : (
      <!-- Estadísticas de confianza (comportamiento original por defecto) -->
      <div class="mt-16 pt-12 border-t border-white/20">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
          <div class="text-center">
            <div class="text-3xl md:text-4xl font-bold text-white mb-2">16+</div>
            <div class="text-white/70 text-sm font-medium">Años de experiencia</div>
          </div>
          <div class="text-center">
            <div class="text-3xl md:text-4xl font-bold text-white mb-2">100%</div>
            <div class="text-white/70 text-sm font-medium">Cobertura nacional</div>
          </div>
          <div class="text-center">
            <div class="text-3xl md:text-4xl font-bold text-white mb-2">24/7</div>
            <div class="text-white/70 text-sm font-medium">Atención al cliente</div>
          </div>
        </div>
      </div>
    )}
  </div>
</section>

<style>
  /* Estilos del efecto tooltip basado en la referencia, adaptado a CSS moderno y accesible */
  .social-icon { position: relative; display: inline-block; }
  .social-icon .layer { width: 55px; height: 55px; transition: transform 0.3s; position: relative; }
  .social-icon .layer span { position: absolute; inset: 0; border: 1px solid var(--brand-color, #1da1f2); border-radius: 8px; transition: all 0.3s; background: transparent; z-index: 0; }
  .social-icon .layer .fab { position: relative; z-index: 1; display:flex; align-items:center; justify-content:center; height:100%; width:100%; color: var(--brand-color, #1da1f2); background: rgba(0,0,0,0.2); border-radius: 8px; }
  .social-icon .layer .fab svg { display:block; width: 24px; height: 24px; color: inherit; fill: currentColor; }

  .social-icon:hover .layer { transform: rotate(-35deg) skew(20deg); }
  .social-icon:hover .layer span:nth-child(1) { opacity: 0.2; }
  .social-icon:hover .layer span:nth-child(2) { opacity: 0.4; transform: translate(5px, -5px); }
  .social-icon:hover .layer span:nth-child(3) { opacity: 0.6; transform: translate(10px, -10px); }
  .social-icon:hover .layer span:nth-child(4) { opacity: 0.8; transform: translate(15px, -15px); }
  .social-icon:hover .layer span:nth-child(5) { opacity: 1; transform: translate(20px, -20px); }

  .social-icon .tooltip-text { position: absolute; left: 50%; bottom: -6px; transform: translateX(-50%); opacity: 0; color: var(--brand-color, #1da1f2); font-weight: 600; font-size: 0.875rem; transition: bottom 0.3s ease, opacity 0.3s ease; white-space: nowrap; }
  .social-icon:hover .tooltip-text, .social-icon:focus .tooltip-text { bottom: -34px; opacity: 1; }

  /* Mejoras de foco y accesibilidad */
  .social-icon:focus .layer .fab { outline: none; }

  @media (max-width: 640px) {
    .social-icon .layer { width: 52px; height: 52px; }
  }
</style>
