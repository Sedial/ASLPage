---
import Button from '../ui/Button.astro';

interface Props {
  title?: string;
  description?: string;
  primaryCTA?: {
    text: string;
    href: string;
  };
  secondaryCTA?: {
    text: string;
    href: string;
  };
  background?: 'light' | 'dark' | 'primary' | 'secondary';
}

const {
  title = '¿Listo para comenzar?',
  description = 'Únete a cientos de clientes satisfechos que ya confían en nosotros para mejorar su operación logística.',
  primaryCTA = {
    text: 'Contáctanos',
    href: '/contact',
  },
  secondaryCTA = {
    text: 'Ver Servicios',
    href: '/services',
  },
  background = 'primary',
} = Astro.props;

const backgroundClasses = {
  light: 'bg-gray-50',
  dark: 'bg-gray-900 text-white',
  primary: 'bg-primary-600 text-white',
  secondary: 'bg-secondary-600 text-white',
};
---

<section class={`py-20 md:py-28 ${backgroundClasses[background]} relative overflow-hidden`}>
  <!-- Elementos decorativos sutiles -->
  <div class="absolute inset-0 overflow-hidden">
    <!-- Formas geométricas de fondo -->
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-white/5 rounded-full blur-3xl"></div>
    <div class="absolute -bottom-40 -left-40 w-96 h-96 bg-white/3 rounded-full blur-3xl"></div>
    
    <!-- Elementos geométricos pequeños -->
    <div class="absolute top-20 right-20 w-4 h-4 bg-white/10 rounded-full"></div>
    <div class="absolute bottom-32 left-16 w-3 h-3 bg-white/10 rounded-lg transform rotate-45"></div>
    <div class="absolute top-1/3 right-1/4 w-2 h-2 bg-white/15 rounded-full"></div>
    
    <!-- Líneas decorativas sutiles -->
    <div class="absolute top-1/4 left-0 w-full h-px bg-white/10"></div>
    <div class="absolute bottom-1/4 left-0 w-full h-px bg-white/5"></div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
    <!-- Badge superior -->
    <div class="inline-flex items-center px-4 py-2 rounded-full bg-white/10 backdrop-blur-sm border border-white/20 text-white text-sm font-semibold mb-8">
      <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
        <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      Contáctanos Hoy
    </div>
    
    <!-- Título principal -->
    <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 text-white leading-tight">
      {title}
    </h2>
    
    <!-- Descripción -->
    <p class="text-xl md:text-2xl max-w-3xl mx-auto mb-12 text-white/90 leading-relaxed font-light">
      {description}
    </p>
    
    <!-- Botones CTA -->
    <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
      <Button 
        href={primaryCTA.href} 
        variant="ghost"
        size="lg"
        class="bg-white text-primary-600 hover:bg-gray-50 font-semibold px-8 py-4 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 border-0"
      >
        {primaryCTA.text}
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </Button>
      
      <Button 
        href={secondaryCTA.href} 
        variant="outline"
        size="lg"
        class="border-2 border-white/30 text-white hover:bg-white/10 backdrop-blur-sm font-semibold px-8 py-4 rounded-xl transition-all duration-300 transform hover:-translate-y-1"
      >
        {secondaryCTA.text}
      </Button>
    </div>
    
    <!-- Estadísticas de confianza -->
    <div class="mt-16 pt-12 border-t border-white/20">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-bold text-white mb-2">16+</div>
          <div class="text-white/70 text-sm font-medium">Años de experiencia</div>
        </div>
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-bold text-white mb-2">100%</div>
          <div class="text-white/70 text-sm font-medium">Cobertura nacional</div>
        </div>
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-bold text-white mb-2">24/7</div>
          <div class="text-white/70 text-sm font-medium">Atención al cliente</div>
        </div>
      </div>
    </div>
  </div>
</section>
