---
// Import site and navigation data
const siteData = await import('../../data/site.json');
const navigationData = await import('../../data/navigation.json');
const footerNav = navigationData.footerNav || [];
---

<footer class="relative mt-24">
  <!-- Capa de fondo con degradado sutil y patrón -->
  <div class="absolute inset-0">
    <div class="h-full w-full bg-gradient-to-b from-gray-900 via-gray-900 to-black"></div>
    <div class="absolute inset-0 opacity-[0.03] bg-[radial-gradient(circle_at_top_left,_#fff,_transparent_40%),_radial-gradient(circle_at_bottom_right,_#fff,_transparent_40%)]"></div>
  </div>

  <div class="relative container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Tarjeta principal -->
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-10 text-gray-300 pt-14 pb-10">
      <!-- Brand -->
      <div class="lg:col-span-5">
        <a href="/" class="inline-flex items-center space-x-3 group">
          <img 
            srcset="/images/logo2.webp 64w, /images/logo2.webp 128w"
            sizes="(max-width: 768px) 64px, 64px"
            width="64"
            height="64"
            src="/images/logo2.webp" 
            alt="ASL Logo" 
            class="w-16 h-16 object-contain" 
          />
          <div class="leading-tight">
            <div class="text-2xl font-extrabold tracking-tight text-white group-hover:text-primary-400 transition-colors">ASL</div>
            <div class="text-sm text-white/60">Logística 3PL Colombia</div>
          </div>
        </a>
        <p class="mt-5 text-white/70 max-w-md">{siteData.description}</p>
        <!-- Social -->
        <div class="mt-6 flex items-center gap-3">
          {siteData.links?.linkedin && (
            <a href={siteData.links.linkedin} target="_blank" rel="noopener" aria-label="LinkedIn"
               class="h-10 w-10 flex items-center justify-center rounded-full bg-white/5 text-white/70 hover:text-white hover:bg-white/10 transition">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
            </a>
          )}
          {siteData.links?.twitter && (
            <a href={siteData.links.twitter} target="_blank" rel="noopener" aria-label="Twitter"
               class="h-10 w-10 flex items-center justify-center rounded-full bg-white/5 text-white/70 hover:text-white hover:bg-white/10 transition">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"/></svg>
            </a>
          )}
        </div>
      </div>

      <!-- Columnas de navegación -->
      <div class="lg:col-span-7 grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8">
        {footerNav.map((column) => (
          <div>
            <h3 class="text-xs font-semibold text-primary-400 uppercase tracking-wider">{column.title}</h3>
            <ul class="mt-4 space-y-3">
              {column.items.map((item) => (
                <li>
                  <a href={item.href} class="text-sm text-white/70 hover:text-white transition inline-flex items-center gap-2">
                    <span class="h-1 w-1 rounded-full bg-primary-500"></span>
                    {item.title}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}

        <!-- Contacto Principal -->
        <div class="col-span-1">
          <h3 class="text-xs font-semibold text-primary-400 uppercase tracking-wider">Contacto</h3>
          <div class="mt-4 space-y-3">
            <!-- Teléfono Principal -->
            <div class="text-sm">
              <div class="text-white/50 text-xs mb-1">Línea Principal</div>
              <a href="tel:+573112057108" class="text-white/70 hover:text-white transition font-medium">+57 311 205 7108</a>
            </div>
            <!-- Correo Principal -->
            <div class="text-sm">
              <div class="text-white/50 text-xs mb-1">Email</div>
              <a href="mailto:operacionesasl@grupoasl.com" class="text-white/70 hover:text-white transition">operaciones@grupoasl.com</a>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Información de contacto detallada -->
      <div class="lg:col-span-12 mt-8 pt-8 border-t border-white/10">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Departamentos -->
          <div>
            <h3 class="text-xs font-semibold text-primary-400 uppercase tracking-wider mb-4">Departamentos</h3>
            <div class="space-y-3 text-sm">
              <div class="flex justify-between items-center">
                <span class="text-white/60">Comercial</span>
                <a href="tel:+573112057108" class="text-white/70 hover:text-white transition">311 205 7108</a>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-white/60">Operaciones</span>
                <a href="tel:+573174311750" class="text-white/70 hover:text-white transition">317 431 1750</a>
              </div>
            </div>
          </div>
          
          <!-- Correos por departamento -->
          <div>
            <h3 class="text-xs font-semibold text-primary-400 uppercase tracking-wider mb-4">Correos Especializados</h3>
            <div class="space-y-3 text-sm">
              <div>
                <div class="text-white/50 text-xs">Financiero</div>
                <a href="mailto:financiero@grupoasl.com" class="text-white/70 hover:text-white transition">financiero@grupoasl.com</a>
              </div>
              <div>
                <div class="text-white/50 text-xs">Operaciones</div>
                <a href="mailto:operacionesasl@grupoasl.com" class="text-white/70 hover:text-white transition">operacionesasl@grupoasl.com</a>
              </div>
            </div>
          </div>
          
          <!-- Acceso rápido -->
          <div>
            <h3 class="text-xs font-semibold text-primary-400 uppercase tracking-wider mb-4">Acceso Rápido</h3>
            <div class="space-y-3 text-sm">
              <a href="/#contacto" class="text-white/70 hover:text-white transition inline-flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                </svg>
                Formulario de contacto
              </a>
              <a href="tel:+573112057108" class="text-white/70 hover:text-white transition inline-flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                Llamar ahora
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Barra inferior -->
    <div class="relative border-t border-white/10 py-6 flex flex-col md:flex-row items-center justify-between gap-4 text-sm text-white/60">
      <p>© {new Date().getFullYear()} {siteData.name}. Todos los derechos reservados.</p>
      <div class="flex items-center gap-3">
        <a href="/privacy" class="hover:text-white transition">Privacidad</a>
        <span class="opacity-30">•</span>
        <a href="/terms" class="hover:text-white transition">Términos</a>
      </div>
    </div>
  </div>
</footer>
