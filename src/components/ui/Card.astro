---
interface Props {
  title?: string;
  href?: string;
  class?: string;
  shadow?: boolean;
  border?: boolean;
  padding?: 'none' | 'sm' | 'md' | 'lg';
}

const {
  title,
  href,
  class: className = '',
  shadow = true,
  border = true,
  padding = 'md',
} = Astro.props;

const paddings = {
  none: '',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8',
};

const classes = `rounded-lg bg-white ${shadow ? 'shadow-md' : ''} ${border ? 'border border-gray-200' : ''} ${paddings[padding]} ${className}`;
---

{href ? 
  <a href={href} class={classes}>
    {title && <h3 class="text-lg font-semibold mb-2">{title}</h3>}
    <slot />
  </a>
  : 
  <div class={classes}>
    {title && <h3 class="text-lg font-semibold mb-2">{title}</h3>}
    <slot />
  </div>
}
