//---
import '../styles/global.css';
import Navbar from '../components/navigation/Navbar.astro';
import Footer from '../components/sections/Footer.astro';
import WhatsAppButton from '../components/common/WhatsAppButton.astro';
import WhatsAppForm from '../components/common/WhatsAppForm.astro';
import HRButton from '../components/common/HRButton.astro';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  transparent?: boolean;
}

const {
  title = 'Astro Landing Template',
  description = 'A modular landing page template built with Astro and Tailwind CSS',
  image = '/images/og-image.jpg',
  transparent = false,
} = Astro.props;

// Load site data
const siteData = await import('../data/site.json');
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/webp" href="/images/logo2.webp" />
    <title>{title} | {siteData.name}</title>
    <meta name="description" content={description} />
    <meta name="google-site-verification" content="H0j0oRmfNEAZNplviyoBBRkd4Y4Y9G7ErM1I93IuevQ" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={`${siteData.url}${Astro.url.pathname}`} />
    
    <!-- SEO Meta Tags -->
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <meta name="author" content="ASL - Agencia de Servicios Logísticos" />
    <meta name="language" content="es-CO" />
    <meta name="geo.region" content="CO-ATL" />
    <meta name="geo.placename" content="Barranquilla, Colombia" />
    
    <!-- PWA Manifest -->
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#CA241C" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteData.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={siteData.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />
    
    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "ASL - Agencia de Servicios Logísticos",
        "url": "https://grupoasl.com",
        "logo": "https://grupoasl.com/images/logo.webp",
        "description": "Líder en soluciones logísticas 3PL y 4PL en Colombia. Expertos en almacenamiento logístico, distribución nacional y gestión de inventarios.",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Carrera 48 # 25 - 30",
          "addressLocality": "Barranquilla",
          "addressRegion": "Atlántico",
          "addressCountry": "CO"
        },
        "contactPoint": {
          "@type": "ContactPoint",
          "telephone": "+57-311-2057108",
          "contactType": "customer service",
          "availableLanguage": "Spanish"
        },
        "sameAs": [
          "https://linkedin.com/company/asl-logistica-colombia",
          "https://instagram.com/asl_logistica"
        ]
      }
    </script>
    
    <!-- Fonts - Dubai -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Dubai:wght@400;700&display=swap" rel="stylesheet" />
  </head>
  <body class="bg-white text-gray-900">
    <Navbar transparent={transparent} />
    <slot />
    <Footer />
    <HRButton phoneNumber="+57 316 4820228" position="left" size="lg" />
    <WhatsAppButton phoneNumber="+57 311 2057108" position="left" size="lg" />
    <WhatsAppForm phoneNumber="+57 311 2057108" />

    <style is:global>
      /* Garantizar legibilidad en secciones legales incluso si el modo oscuro está activo */
      .legal-content { color: #000; }
      .legal-content h1, .legal-content h2, .legal-content h3, .legal-content h4 { color: #CA241C; }
      .legal-content a { color: #CA241C; }
    </style>
  </body>
</html>
