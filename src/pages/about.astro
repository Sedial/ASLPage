---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/ui/Button.astro';
import CTA from '../components/sections/CTA.astro';
import Card from '../components/ui/Card.astro';
import Badge from '../components/ui/Badge.astro';
import TruckLoader from '../components/common/TruckLoader.astro';

// About page content para ASL
const pageTitle = 'Nosotros | ASL - Agencia de Servicios Logísticos S.A.';
const pageDescription = 'ASL - Agencia de Servicios Logísticos S.A. es una empresa operadora logística 3PL con experiencia Bavaria. Conoce nuestra misión, visión y presencia en múltiples departamentos de Colombia ofreciendo soluciones integrales de almacenamiento y distribución.';

// Misión y visión de ASL
const mission = {
  headline: 'Nuestra Misión',
  text: 'Brindar servicios de integración logística que permita solucionar las necesidades de nuestros clientes, convirtiéndonos en un aliado estratégico que garantice la funcionalidad de sus operaciones con las mejores prácticas de calidad generando rentabilidad en el negocio y posicionamiento de sus operaciones a nivel global. Nuestra experiencia y garantías de calidad hacen de ASL una Compañía sólida, con crecimiento y proyección permanente, basados en condiciones de desarrollo sostenible desde el punto de vista económico, social y ambiental.',
};

const vision = {
  headline: 'Nuestra Visión',
  text: 'Ser reconocida como una compañía líder en prestación de servicios logísticos a nivel Latinoamérica, logrando la integración de la cadena de valor de nuestros clientes con tecnología, calidad, seguridad y medioambiente.',
};

// Historia de ASL
const story = {
  headline: 'Nuestra Historia',
  paragraphs: [
    'Agencia de Servicios Logísticos S.A. "ASL S.A." es una empresa que nace de la unión de conocimientos y experiencia de operadores logísticos de Bavaria, mediante una idea de negocio de los gerentes de empresas prestadoras de estos servicios en Armenia, Cali y Pasto, quienes deciden hacer una empresa de tipo sociedad anónima.',
    'ASL cuenta con personal experto y tecnologías apropiadas que aseguran la generación de valor agregado en la cadena de abastecimiento ofreciendo soluciones integrales a la medida de nuestros clientes.',
    'Una compañía que presta servicios de almacenamiento, administración y gestión de inventarios, picking, packing, operaciones in house distribuidas por agrega valor en la cadena de abastecimiento, al efectuar entregas perfectas, con mínimos costos y tiempos justos. Lo anterior, permite convertirnos en un socio estratégico para nuestros clientes, asegurando su rentabilidad y satisfacción a través de nuestras operaciones.'
  ],
  image: '/images/about/asl-historia.webp',
  imageAlt: 'Historia de ASL - Experiencia logística con Bavaria',
};

// Valores corporativos de ASL
const values = [
  {
    title: 'Excelencia Operacional',
    description: 'Mantenemos los más altos estándares de calidad en cada proceso, garantizando un 99.8% de precisión en nuestras operaciones.',
    icon: 'star',
    color: 'primary'
  },
  {
    title: 'Innovación Tecnológica',
    description: 'Implementamos las últimas tecnologías en WMS, TMS y automatización para optimizar continuamente nuestros procesos.',
    icon: 'lightbulb',
    color: 'secondary'
  },
  {
    title: 'Compromiso con el Cliente',
    description: 'Cada cliente es único. Desarrollamos soluciones personalizadas que se adaptan perfectamente a sus necesidades específicas.',
    icon: 'heart',
    color: 'accent-green'
  },
  {
    title: 'Transparencia Total',
    description: 'Ofrecemos visibilidad completa de todos los procesos con reportes en tiempo real y comunicación constante.',
    icon: 'shield',
    color: 'accent-yellow'
  },
  {
    title: 'Sostenibilidad',
    description: 'Implementamos prácticas eco-amigables y optimización de rutas para reducir el impacto ambiental de nuestras operaciones.',
    icon: 'leaf',
    color: 'accent-green'
  },
  {
    title: 'Mejora Continua',
    description: 'Analizamos constantemente nuestros procesos para identificar oportunidades de optimización y crecimiento.',
    icon: 'trending-up',
    color: 'primary'
  },
];



// Aliados estratégicos
const partners = [
  {
    name: 'Sedial Group',
    description: 'Soluciones Logísticas Integrales',
    website: 'https://www.sedialgroup.com.co/',
    image: '/images/partners/sedial.webp'
  },
  {
    name: 'Pex Express',
    description: 'Servicios de Mensajería y Paquetería',
    website: 'https://www.pexexpress.com/',
    image: '/images/partners/pexexpress.webp'
  },
  {
    name: 'Megalogistik',
    description: 'Operaciones Logísticas Especializadas',
    website: 'https://www.megalogistik.com.co/',
    image: '/images/partners/megalogistik.webp'
  },
  {
    name: 'Golden Trucker',
    description: 'Transporte y Distribución',
    website: 'https://www.goldentrucker.com/',
    image: '/images/partners/goldentrucker.webp'
  }
];


---


<BaseLayout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-slate-50 via-white to-gray-100 py-32 relative overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, rgb(15 23 42) 1px, transparent 0); background-size: 40px 40px;"></div>
    </div>
    
    <div class="container mx-auto px-4 text-center relative z-10">
      <div class="max-w-5xl mx-auto">
        <!-- Main Title -->
        <div class="mb-12">
          <h1 class="text-6xl md:text-8xl font-bold mb-6 leading-tight">
            <span class="bg-gradient-to-r from-slate-800 via-slate-700 to-slate-600 bg-clip-text text-transparent">
              Conoce
            </span>
            <span class="block text-primary-600 mt-2">ASL</span>
          </h1>
          
          <!-- Título completo de la empresa -->
          <div class="mb-8">
            <h2 class="text-2xl md:text-3xl font-semibold text-slate-700 mb-2">
              Agencia de Servicios Logísticos
            </h2>
            <p class="text-lg text-slate-500 italic">
              Tu socio estratégico en soluciones logísticas integrales
            </p>
          </div>
          
          <div class="w-24 h-1 bg-gradient-to-r from-primary-600 to-accent-yellow mx-auto mb-8"></div>
          <p class="text-xl md:text-2xl text-slate-600 leading-relaxed max-w-3xl mx-auto">
            {pageDescription}
          </p>
        </div>
        
        <!-- Truck Loader Animation -->
         <div class="mb-12">
           <TruckLoader />
         </div>
        
        <!-- Stats Badges -->
        <div class="flex flex-wrap justify-center gap-6 text-sm md:text-base">
          <div class="bg-white/90 backdrop-blur-sm border border-gray-200/50 rounded-2xl px-6 py-4 shadow-lg hover:shadow-xl transition-all duration-300">
            <div class="text-2xl font-bold text-primary-600 mb-1">Bavaria</div>
            <div class="text-slate-600 font-medium">Experiencia con</div>
          </div>
          <div class="bg-white/90 backdrop-blur-sm border border-gray-200/50 rounded-2xl px-6 py-4 shadow-lg hover:shadow-xl transition-all duration-300">
            <div class="text-2xl font-bold text-secondary-600 mb-1">3PL</div>
            <div class="text-slate-600 font-medium">Operadores Logísticos</div>
          </div>
          <div class="bg-white/90 backdrop-blur-sm border border-gray-200/50 rounded-2xl px-6 py-4 shadow-lg hover:shadow-xl transition-all duration-300">
            <div class="text-2xl font-bold text-accent-green mb-1">3</div>
            <div class="text-slate-600 font-medium">Ciudades Principales</div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Modern Decorative Elements -->
    <div class="absolute top-20 right-20 w-72 h-72 bg-gradient-to-br from-primary-100 to-accent-yellow/20 rounded-full blur-3xl opacity-60"></div>
    <div class="absolute bottom-20 left-20 w-96 h-96 bg-gradient-to-tr from-secondary-100 to-accent-green/20 rounded-full blur-3xl opacity-40"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-gradient-to-r from-transparent via-primary-50/30 to-transparent rounded-full blur-3xl opacity-30"></div>
  </section>



  <!-- Misión y Visión -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
        <!-- Misión -->
        <div class="text-center lg:text-left">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-primary-100 rounded-full mb-6">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h2 class="text-3xl md:text-4xl font-bold text-primary-600 mb-6">
            {mission.headline}
          </h2>
          <p class="text-lg text-gray-600 leading-relaxed">
            {mission.text}
          </p>
        </div>
        
        <!-- Visión -->
        <div class="text-center lg:text-left">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-accent-green/10 rounded-full mb-6">
            <svg class="w-8 h-8 text-accent-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
            </svg>
          </div>
          <h2 class="text-3xl md:text-4xl font-bold text-primary-600 mb-6">
            {vision.headline}
          </h2>
          <p class="text-lg text-gray-600 leading-relaxed">
            {vision.text}
          </p>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Historia de ASL -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-primary-600 mb-6">
            {story.headline}
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Más de una década construyendo el futuro de la logística en Colombia
          </p>
        </div>
        
        <div class="grid lg:grid-cols-2 gap-16 items-center">
          <div class="lg:order-2">
            <div class="relative">
              <img 
                src={story.image} 
                alt={story.imageAlt}
                class="rounded-2xl shadow-2xl w-full h-auto"
              />
              <div class="absolute -bottom-6 -right-6 bg-primary-600 text-white p-6 rounded-xl shadow-lg">
                <div class="text-3xl font-bold">2008</div>
                <div class="text-sm">Año de fundación</div>
              </div>
            </div>
          </div>
          
          <div class="lg:order-1 space-y-8">
            {story.paragraphs.map((paragraph, index) => (
              <div class="flex gap-4">
                <div class="flex-shrink-0">
                  <div class="w-8 h-8 bg-primary-600 text-white rounded-full flex items-center justify-center text-sm font-bold">
                    {index + 1}
                  </div>
                </div>
                <div>
                  <p class="text-lg leading-relaxed text-gray-700">
                    {paragraph}
                  </p>
                </div>
              </div>
            ))}
            
            <div class="pt-6">
              <Button href="/services" variant="primary" size="lg">
                Conoce Nuestros Servicios
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </Button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Valores Corporativos -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-primary-600 mb-6">
          Nuestros Valores
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Los principios fundamentales que guían cada decisión y definen nuestra cultura empresarial en ASL.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
        {values.map((value, index) => (
          <Card class="group hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border-0 bg-gradient-to-br from-white to-gray-50">
            <div class="p-8">
              <div class={`w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6 transition-transform group-hover:scale-110 ${
                value.color === 'primary' ? 'bg-primary-100' :
                value.color === 'secondary' ? 'bg-secondary-100' :
                value.color === 'accent-green' ? 'bg-accent-green/10' :
                value.color === 'accent-yellow' ? 'bg-accent-yellow/10' :
                'bg-primary-100'
              }`}>
                <svg class={`w-8 h-8 ${
                  value.color === 'primary' ? 'text-primary-600' :
                  value.color === 'secondary' ? 'text-secondary-600' :
                  value.color === 'accent-green' ? 'text-accent-green' :
                  value.color === 'accent-yellow' ? 'text-accent-yellow' :
                  'text-primary-600'
                }`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  {value.icon === 'lightbulb' && (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                  )}
                  {value.icon === 'star' && (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                  )}
                  {value.icon === 'shield' && (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                  )}
                  {value.icon === 'heart' && (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                  )}
                  {value.icon === 'leaf' && (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
                  )}
                  {value.icon === 'trending-up' && (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                  )}
                </svg>
              </div>
              <h3 class="text-xl font-bold text-primary-600 mb-4 text-center group-hover:text-primary-700 transition-colors">
                {value.title}
              </h3>
              <p class="text-gray-600 text-center leading-relaxed">
                {value.description}
              </p>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Aliados Estratégicos -->
  <section class="py-20 bg-gradient-to-br from-gray-50 to-gray-100">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-primary-600 mb-6">
          Nuestros Aliados Estratégicos
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Trabajamos con los mejores partners del sector para ofrecerte soluciones logísticas integrales y de alta calidad.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-6xl mx-auto">
        {partners.map((partner) => (
          <a 
            href={partner.website} 
            target="_blank" 
            rel="noopener noreferrer"
            class="bg-white rounded-2xl p-8 text-center shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 group"
          >
            <img
              src={partner.image}
              alt={partner.name}
              width="200"
              height="200"
              loading="lazy"
              class="w-[200px] h-[200px] rounded-xl object-contain mx-auto mb-6 shadow-md ring-1 ring-slate-200 bg-white p-2"
            />
            <h3 class="text-xl font-bold text-primary-600 mb-2 group-hover:text-primary-700 transition-colors">
              {partner.name}
            </h3>
            <p class="text-gray-600 text-sm">
              {partner.description}
            </p>
          </a>
        ))}
      </div>
      
      <div class="text-center mt-12">
        <p class="text-lg text-gray-600 mb-6">
          Nuestra red de aliados estratégicos nos permite ampliar nuestro alcance y ofrecer servicios especializados en toda Colombia.
        </p>
        <!-- Botón eliminado -->
      </div>
    </div>
  </section>
  

  
  <!-- CTA Section -->
  <CTA 
    title="¿Listo para optimizar tu logística?" 
    description="Únete a más de 150 empresas que confían en ASL. Descubre cómo podemos transformar tu cadena de suministro."
    primaryCTA={{ text: 'Solicitar Cotización Gratuita', href: '/contact' }}
    secondaryCTA={{ text: 'Ver Nuestros Servicios', href: '/services' }}
    showSocialIcons={true}
  />
</BaseLayout>
