    description="ContÃ¡ctanos hoy para descubrir cÃ³mo podemos ayudar a que tu negocio crezca."
    primaryCTA={{ text: 'ContÃ¡ctanos', href: '/contact' }}
    secondaryCTA={{ text: 'Ver Servicios', href: '/services' }}
    showSocialIcons={true}
  />
</BaseLayout>
