---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Button from '../../components/ui/Button.astro';
import CTA from '../../components/sections/CTA.astro';
import blogData from '../../data/blog.json';

// Get the slug from the URL parameters
export async function getStaticPaths() {
  const posts = blogData.posts;
  
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;

// Format the date to a more readable format
function formatDate(dateString: string): string {
  const options: Intl.DateTimeFormatOptions = { year: 'numeric', month: 'long', day: 'numeric' };
  return new Date(dateString).toLocaleDateString('en-US', options);
}



// Social share URLs
const shareLinks = {
  twitter: `https://twitter.com/intent/tweet?text=${encodeURIComponent(post.title)}&url=${encodeURIComponent(`${Astro.url}`)}`,
  facebook: `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(`${Astro.url}`)}`,
  linkedin: `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(`${Astro.url}`)}`
};
---

<BaseLayout title={post.title} description={post.excerpt}>
  <!-- Article Header -->
  <section class="section bg-gray-50 pt-24 md:pt-32">
    <div class="container">
      <div class="max-w-3xl mx-auto">
        <div class="flex items-center gap-2 text-sm text-gray-500 mb-4">
          <a href="/blog" class="hover:text-primary-600 transition duration-150">Blog</a>
          <span>›</span>
          <span>{post.category}</span>
        </div>
        
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6">{post.title}</h1>
        
        <div class="flex items-center gap-4 mb-8">
          <div class="flex items-center gap-2">
            <div class="w-10 h-10 rounded-full bg-gray-300 flex items-center justify-center overflow-hidden">
              <!-- Replace with actual author avatar if available -->
              <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <div>
              <div class="font-medium">{post.author}</div>
            </div>
          </div>
          
          <span class="text-gray-400">|</span>
          
          <div class="text-gray-500">{formatDate(post.date)}</div>
          
          <span class="text-gray-400">|</span>
          
          <div class="bg-primary-100 text-primary-700 px-3 py-1 text-xs font-medium rounded-full">
            {post.category}
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Article Content -->
  <section class="section bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <!-- Featured Image -->
        <div class="rounded-lg overflow-hidden shadow-md mb-8">
          <img 
            src={post.coverImage} 
            alt={post.title}
            class="w-full h-auto"
          />
        </div>
        
        <!-- Article Content -->
        <div class="blog-content prose prose-lg max-w-none">
          <p class="text-lg mb-6 text-gray-800 font-medium leading-relaxed">{post.excerpt}</p>
          <div class="mt-8" set:html={post.content}></div>
        </div>
        
        <!-- Tags -->
        <div class="mt-8 pt-6 border-t border-gray-200">
          <div class="flex flex-wrap gap-2">
            <span class="text-gray-700 font-medium">Tags:</span>
            <a href="#" class="bg-gray-100 hover:bg-gray-200 text-gray-700 px-3 py-1 rounded-md text-sm transition duration-150">Web Design</a>
            <a href="#" class="bg-gray-100 hover:bg-gray-200 text-gray-700 px-3 py-1 rounded-md text-sm transition duration-150">UX</a>
            <a href="#" class="bg-gray-100 hover:bg-gray-200 text-gray-700 px-3 py-1 rounded-md text-sm transition duration-150">Tips</a>
          </div>
        </div>
        
        <!-- Share -->
        <div class="mt-6">
          <div class="flex items-center gap-4">
            <span class="text-gray-700 font-medium">Share:</span>
            <div class="flex gap-2">
              <a 
                href={shareLinks.twitter} 
                target="_blank" 
                rel="noopener noreferrer"
                class="w-8 h-8 flex items-center justify-center bg-gray-100 hover:bg-gray-200 rounded-full transition duration-150"
                aria-label="Share on Twitter"
              >
                <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"></path>
                </svg>
              </a>
              <a 
                href={shareLinks.facebook} 
                target="_blank" 
                rel="noopener noreferrer"
                class="w-8 h-8 flex items-center justify-center bg-gray-100 hover:bg-gray-200 rounded-full transition duration-150"
                aria-label="Share on Facebook"
              >
                <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"></path>
                </svg>
              </a>
              <a 
                href={shareLinks.linkedin} 
                target="_blank" 
                rel="noopener noreferrer"
                class="w-8 h-8 flex items-center justify-center bg-gray-100 hover:bg-gray-200 rounded-full transition duration-150"
                aria-label="Share on LinkedIn"
              >
                <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M4.98 3.5c0 1.381-1.11 2.5-2.48 2.5s-2.48-1.119-2.48-2.5c0-1.38 1.11-2.5 2.48-2.5s2.48 1.12 2.48 2.5zm.02 4.5h-5v16h5v-16zm7.982 0h-4.968v16h4.969v-8.399c0-4.67 6.029-5.052 6.029 0v8.399h4.988v-10.131c0-7.88-8.922-7.593-11.018-3.714v-2.155z"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
        
        <!-- Author Bio -->
        <div class="mt-8 pt-6 border-t border-gray-200">
          <div class="bg-gray-50 rounded-lg p-6">
            <div class="flex items-center gap-4">
              <div class="w-16 h-16 rounded-full bg-gray-300 flex items-center justify-center overflow-hidden flex-shrink-0">
                <!-- Replace with actual author avatar if available -->
                <svg class="w-8 h-8 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-bold">{post.author}</h3>
                <p class="text-gray-600">Content Writer</p>
              </div>
            </div>
            <p class="mt-4 text-gray-600">
              Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed tempus lorem nec leo ultrices, a auctor ligula efficitur. Donec ac facilisis orci, nec tristique lectus.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <CTA 
    title="¿Listo para comenzar?" 
    description="Contáctanos hoy para descubrir cómo podemos ayudar a que tu negocio crezca."
    primaryCTA={{ text: 'Contáctanos', href: '/contact' }}
    secondaryCTA={{ text: 'Ver Servicios', href: '/services' }}
    showSocialIcons={true}
  />
</BaseLayout>
