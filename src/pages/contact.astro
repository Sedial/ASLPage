---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/sections/ContactForm.astro';
import CTA from '../components/sections/CTA.astro';
// Removed astro-icon dependency - using inline SVG icons instead

// Contact information
const contactInfo = [
  {
    icon: 'mdi:map-marker',
    title: 'Our Location',
    content: '123 Business Avenue, Suite 100<br>New York, NY 10001',
    link: 'https://maps.google.com',
    linkText: 'Get directions'
  },
  {
    icon: 'mdi:email',
    title: 'Email Us',
    content: 'info@yourcompany.com<br>support@yourcompany.com',
    link: 'mailto:info@yourcompany.com',
    linkText: 'Send an email'
  },
  {
    icon: 'mdi:phone',
    title: 'Call Us',
    content: '+1 (555) 123-4567<br>Monday-Friday, 9am-5pm EST',
    link: 'tel:+15551234567',
    linkText: 'Call now'
  }
];

// Social media links
const socialLinks = [
  { icon: 'mdi:facebook', url: 'https://facebook.com', label: 'Facebook' },
  { icon: 'mdi:twitter', url: 'https://twitter.com', label: 'Twitter' },
  { icon: 'mdi:instagram', url: 'https://instagram.com', label: 'Instagram' },
  { icon: 'mdi:linkedin', url: 'https://linkedin.com', label: 'LinkedIn' }
];
---

<BaseLayout title="Contact Us" description="Get in touch with our team. We're here to help answer any questions you may have.">
  <!-- Hero Section -->
  <section class="bg-gradient-to-b from-gray-50 to-white py-12 md:py-20">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Contact Us</h1>
        <p class="text-xl text-gray-600">Have questions or want to work together? We'd love to hear from you!</p>
      </div>
    </div>
  </section>
  
  <!-- Main Content Section -->
  <section class="py-12 md:py-20">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 lg:gap-12">
        <!-- Contact Information -->
        <div class="lg:col-span-1 space-y-8">
          <div class="bg-white rounded-lg shadow-md p-6 md:p-8">
            <h2 class="text-2xl font-bold mb-6">Get In Touch</h2>
            
            <div class="space-y-6">
              {contactInfo.map(item => (
                <div class="flex items-start">
                  <div class="flex-shrink-0 h-12 w-12 flex items-center justify-center bg-primary-100 text-primary-600 rounded-lg mr-4">
                    {item.icon === 'mdi:map-marker' && (
                      <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                      </svg>
                    )}
                    {item.icon === 'mdi:email' && (
                      <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                      </svg>
                    )}
                    {item.icon === 'mdi:phone' && (
                      <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                      </svg>
                    )}
                  </div>
                  <div>
                    <h3 class="font-semibold text-lg">{item.title}</h3>
                    <p class="text-gray-600 mb-2" set:html={item.content} />
                    <a href={item.link} class="text-primary-600 hover:text-primary-700 font-medium inline-flex items-center">
                      {item.linkText}
                      <svg class="w-4 h-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    </a>
                  </div>
                </div>
              ))}
            </div>
            
            <!-- Social Media -->
            <div class="mt-8 pt-6 border-t border-gray-200">
              <h3 class="font-semibold text-lg mb-4">Connect With Us</h3>
              <div class="flex space-x-4">
                {socialLinks.map(social => (
                  <a 
                    href={social.url} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    aria-label={social.label}
                    class="h-10 w-10 flex items-center justify-center rounded-full bg-gray-100 text-gray-600 hover:bg-primary-100 hover:text-primary-600 transition duration-300"
                  >
                    {social.icon === 'mdi:facebook' && (
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                      </svg>
                    )}
                    {social.icon === 'mdi:twitter' && (
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                      </svg>
                    )}
                    {social.icon === 'mdi:instagram' && (
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987 6.62 0 11.987-5.367 11.987-11.987C24.014 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.49-3.323-1.297C4.198 14.895 3.708 13.744 3.708 12.447s.49-2.448 1.297-3.323C5.902 8.198 7.053 7.708 8.35 7.708s2.448.49 3.323 1.297c.876.876 1.366 2.027 1.366 3.324s-.49 2.448-1.366 3.323c-.875.876-2.026 1.366-3.323 1.366zm7.718 0c-1.297 0-2.448-.49-3.323-1.297-.876-.875-1.366-2.026-1.366-3.323s.49-2.448 1.366-3.323c.875-.876 2.026-1.366 3.323-1.366s2.448.49 3.323 1.366c.876.875 1.366 2.026 1.366 3.323s-.49 2.448-1.366 3.323c-.875.876-2.026 1.366-3.323 1.366z"/>
                      </svg>
                    )}
                    {social.icon === 'mdi:linkedin' && (
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                      </svg>
                    )}
                  </a>
                ))}
              </div>
            </div>
          </div>
          
          <!-- Office Hours -->
          <div class="bg-white rounded-lg shadow-md p-6 md:p-8">
            <h2 class="text-2xl font-bold mb-4">Office Hours</h2>
            <ul class="space-y-2">
              <li class="flex justify-between">
                <span class="text-gray-600">Monday - Friday</span>
                <span class="font-medium">9:00 AM - 5:00 PM</span>
              </li>
              <li class="flex justify-between">
                <span class="text-gray-600">Saturday</span>
                <span class="font-medium">10:00 AM - 2:00 PM</span>
              </li>
              <li class="flex justify-between">
                <span class="text-gray-600">Sunday</span>
                <span class="font-medium">Closed</span>
              </li>
            </ul>
          </div>
        </div>
        
        <!-- Contact Form -->
        <div class="lg:col-span-2">
          <ContactForm 
            title="Send Us a Message" 
            subtitle="Fill out the form below and we'll get back to you as soon as possible."
          />
          
          <!-- Map (Placeholder) -->
          <div class="mt-8 bg-gray-200 rounded-lg overflow-hidden h-[300px] flex items-center justify-center">
            <div class="text-center p-6">
              <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
              </svg>
              <p class="text-gray-600">Map placeholder - In a real website, you would embed a Google Maps or similar map service here.</p>
              <p class="text-sm text-gray-500 mt-2">For implementation, use Google Maps or MapBox API.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- FAQ Section -->
  <section class="py-12 md:py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h2 class="text-3xl font-bold mb-4">Frequently Asked Questions</h2>
        <p class="text-gray-600">Find answers to common questions about our services and processes.</p>
      </div>
      
      <div class="max-w-4xl mx-auto">
        <div class="space-y-6">
          {[
            {
              question: 'How quickly do you respond to inquiries?',
              answer: 'We aim to respond to all inquiries within 24 business hours. For urgent matters, please call our support line for immediate assistance.'
            },
            {
              question: 'Do you offer consultations?',
              answer: 'Yes, we offer free 30-minute consultations to discuss your project needs and how we can help. You can schedule a consultation through our contact form or by calling our office.'
            },
            {
              question: 'What information should I include in my message?',
              answer: 'To help us assist you better, please include details about your project or inquiry, your timeline, budget considerations, and any specific requirements or questions you may have.'
            },
            {
              question: '¿Trabajan con clientes a nivel nacional?',
        answer: 'Sí, trabajamos con clientes en todo el territorio colombiano. Nuestro equipo tiene experiencia gestionando proyectos en diferentes regiones del país y podemos acomodar reuniones virtuales en horarios convenientes para usted.'
            },
          ].map(faq => (
            <div class="bg-white rounded-lg shadow-sm p-6">
              <h3 class="text-xl font-semibold mb-2">{faq.question}</h3>
              <p class="text-gray-600">{faq.answer}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>
  <CTA 
    title="¿Listo para comenzar?" 
    description="Contáctanos hoy para descubrir cómo podemos ayudar a que tu negocio crezca."
    primaryCTA={{ text: 'Contáctanos', href: '/contact' }}
    secondaryCTA={{ text: 'Ver Servicios', href: '/services' }}
    showSocialIcons={true}
  />
</BaseLayout>
