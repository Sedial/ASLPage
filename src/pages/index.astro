---
import LandingLayout from '../layouts/LandingLayout.astro';
import Hero from '../components/sections/Hero.astro';
import Features from '../components/sections/Features.astro';
import Process from '../components/sections/Process.astro';
import ContactAnimation from '../components/sections/ContactAnimation.astro';
import CTA from '../components/sections/CTA.astro';
import Blog from '../components/sections/Blog.astro';
import blogData from '../data/blog.json';

// Get the 3 most recent blog posts
const recentPosts = [...blogData.posts]
  .sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime())
  .slice(0, 3);
---

<LandingLayout 
  title="ASL - Agencia de Servicios Logísticos | Operadores 3PL Colombia | Experiencia Bavaria" 
  description="ASL - Agencia de Servicios Logísticos S.A., operadores logísticos 3PL con experiencia Bavaria. Servicios de almacenamiento, picking, packing, administración de inventarios y operación logística in home en Colombia."
>  
  <Hero 
    title="ASL - Agencia de Servicios Logísticos"
    subtitle="Operadores logísticos 3PL con experiencia Bavaria. Ofrecemos soluciones integrales de almacenamiento, picking, packing, administración de inventarios y operación logística in home con personal experto y tecnologías apropiadas."
    primaryCTA={{ text: 'Solicitar Cotización', href: '/contact' }}
    secondaryCTA={{ text: 'Nuestros Servicios', href: '/services' }}
  />
  
  <Features id="features" />
  
  <Process />
  
  <ContactAnimation 
    title="Contáctanos" 
    subtitle="Estamos listos para ayudarte con tus necesidades logísticas"
  />
  
  <Blog posts={recentPosts} />
  
  <CTA 
    title="¿Listo para comenzar?" 
    description="Contáctanos hoy para descubrir cómo podemos ayudar a que tu negocio crezca."
    primaryCTA={{ text: 'Contáctanos', href: '/contact' }}
    secondaryCTA={{ text: 'Ver Servicios', href: '/services' }}
    showSocialIcons={true}
  />
</LandingLayout>
