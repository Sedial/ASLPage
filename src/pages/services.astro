---
import BaseLayout from '../layouts/BaseLayout.astro';
import ScrollytellingServices from '../components/sections/ScrollytellingServices.astro';

const pageTitle = 'Servicios Logísticos | ASL';
const pageDescription = 'Soluciones logísticas 3PL integrales: almacenamiento, distribución, eCommerce, tecnología e innovación.';
---

<BaseLayout title={pageTitle} description={pageDescription} transparent={true}>
  <section>
    <div class="sr-only">
      <h1>{pageTitle}</h1>
      <p>{pageDescription}</p>
    </div>
    <ScrollytellingServices />
  </section>
</BaseLayout>
