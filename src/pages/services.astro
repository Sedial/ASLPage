---
import BaseLayout from '../layouts/BaseLayout.astro';
import ScrollytellingServices from '../components/sections/ScrollytellingServices.astro';

const pageTitle = 'Servicios Logísticos 3PL | ASL - Experiencia Bavaria';
const pageDescription = 'ASL ofrece servicios logísticos 3PL especializados: recepción y despacho de mercancías, almacenamiento, picking, packing, armado de ofertas, administración de inventarios y operación logística in home con personal experto.';
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <section>
    <div class="sr-only">
      <h1>{pageTitle}</h1>
      <p>{pageDescription}</p>
    </div>
    <ScrollytellingServices />
  </section>
</BaseLayout>
